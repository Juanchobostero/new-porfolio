---
const githubUsername = "Juanchobostero";
---

<section class="mb-16 p-6 border rounded-lg bg-black dark:border-sky-700 shadow-lg shadow-gray-900/50 dark:shadow-gray-700/50 border-t border-l border-gray-300 border-opacity-50">
    <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <svg class="size-7 text-sky-400" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        Actividad en GitHub
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Repos públicos -->
        <div class="stat-card bg-gradient-to-br from-sky-500/10 to-sky-700/10 p-4 rounded-lg border border-sky-500/30 hover:border-sky-400/50 transition-all duration-300 hover:scale-105">
            <div class="flex items-center justify-between mb-2">
                <span class="text-gray-300">Repositorios Públicos</span>
                <svg class="size-5 text-sky-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 19a2 2 0 01-2-2V7a2 2 0 012-2h4l2 2h4a2 2 0 012 2v1M5 19h14a2 2 0 002-2v-5a2 2 0 00-2-2H9a2 2 0 00-2 2v5a2 2 0 01-2 2z"></path>
                </svg>
            </div>
            <div id="public-repos" class="text-3xl font-bold text-sky-400">...</div>
        </div>

        <!-- Followers -->
        <div class="stat-card bg-gradient-to-br from-purple-500/10 to-purple-700/10 p-4 rounded-lg border border-purple-500/30 hover:border-purple-400/50 transition-all duration-300 hover:scale-105">
            <div class="flex items-center justify-between mb-2">
                <span class="text-gray-300">Seguidores</span>
                <svg class="size-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
            </div>
            <div id="followers" class="text-3xl font-bold text-purple-400">...</div>
        </div>

        <!-- Total Stars -->
        <div class="stat-card bg-gradient-to-br from-yellow-500/10 to-yellow-700/10 p-4 rounded-lg border border-yellow-500/30 hover:border-yellow-400/50 transition-all duration-300 hover:scale-105">
            <div class="flex items-center justify-between mb-2">
                <span class="text-gray-300">Estrellas Totales</span>
                <svg class="size-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
            </div>
            <div id="total-stars" class="text-3xl font-bold text-yellow-400">...</div>
        </div>
    </div>

    <!-- Últimos repos actualizados -->
    <div class="mt-8">
        <h3 class="text-xl font-semibold text-gray-200 mb-4 flex items-center gap-2">
            <svg class="size-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Últimos Repositorios Actualizados
        </h3>
        <div id="recent-repos" class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <!-- Los repos se cargarán aquí dinámicamente -->
        </div>
    </div>

    <div class="mt-6 text-center">
        <a 
            href={`https://github.com/${githubUsername}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-6 py-3 bg-white/5 hover:bg-white/10 border border-white/20 hover:border-sky-400/50 rounded-full transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-sky-500/30 text-white"
        >
            <svg class="size-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            Ver Perfil Completo
        </a>
    </div>
</section>

<script define:vars={{ githubUsername }}>
    async function fetchGitHubData() {
        try {
            // Fetch user data
            const userResponse = await fetch(`https://api.github.com/users/${githubUsername}`);
            const userData = await userResponse.json();
            
            // Update stats
            document.getElementById('public-repos').textContent = userData.public_repos || 0;
            document.getElementById('followers').textContent = userData.followers || 0;
            
            // Fetch repos para calcular estrellas totales
            const reposResponse = await fetch(`https://api.github.com/users/${githubUsername}/repos?sort=updated&per_page=100`);
            const repos = await reposResponse.json();
            
            // Calcular estrellas totales
            const totalStars = repos.reduce((sum, repo) => sum + repo.stargazers_count, 0);
            document.getElementById('total-stars').textContent = totalStars;
            
            // Mostrar últimos 4 repos actualizados
            const recentReposContainer = document.getElementById('recent-repos');
            const recentRepos = repos.slice(0, 4);
            
            recentReposContainer.innerHTML = recentRepos.map(repo => `
                <a 
                    href="${repo.html_url}" 
                    target="_blank"
                    rel="noopener noreferrer"
                    class="repo-card bg-white/5 hover:bg-white/10 p-4 rounded-lg border border-white/10 hover:border-sky-400/50 transition-all duration-300 hover:scale-105 block group"
                >
                    <div class="flex items-start justify-between mb-2">
                        <h4 class="text-sky-400 font-semibold group-hover:text-sky-300 transition-colors">${repo.name}</h4>
                        <div class="flex items-center gap-1 text-yellow-400 text-sm">
                            <svg class="size-4" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                            </svg>
                            ${repo.stargazers_count}
                        </div>
                    </div>
                    <p class="text-gray-400 text-sm line-clamp-2 mb-3">${repo.description || 'Sin descripción'}</p>
                    <div class="flex items-center gap-4 text-xs text-gray-500">
                        ${repo.language ? `
                            <span class="flex items-center gap-1">
                                <span class="size-2 rounded-full bg-sky-400"></span>
                                ${repo.language}
                            </span>
                        ` : ''}
                        <span>Actualizado: ${new Date(repo.updated_at).toLocaleDateString('es-AR')}</span>
                    </div>
                </a>
            `).join('');
            
        } catch (error) {
            console.error('Error fetching GitHub data:', error);
            document.getElementById('public-repos').textContent = 'N/A';
            document.getElementById('followers').textContent = 'N/A';
            document.getElementById('total-stars').textContent = 'N/A';
        }
    }

    // Cargar datos cuando el componente sea visible
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                fetchGitHubData();
                observer.unobserve(entry.target);
            }
        });
    }, { threshold: 0.1 });

    const section = document.querySelector('section');
    if (section) {
        observer.observe(section);
    }
</script>

<style>
    @keyframes reveal {
        from {
            opacity: 0;
            transform: translateY(100px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    section {
        animation: reveal both;
        animation-timeline: view();
        animation-range: entry 20% cover 30%;
    }

    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
