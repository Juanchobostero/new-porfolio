<div class="credential-container">
  <div class="credential">
    <div class="card">
      <span class="text"><slot /></span>
    </div>
  </div>
</div>

<style>
  .credential-container {
    perspective: 1000px;
    width: 180px;
    height: 140px;
  }

  .credential {
    width: 100%;
    height: 100%;
    position: relative;
    transition: transform 0.6s, box-shadow 0.6s;
    transform-style: preserve-3d;
  }

  .credential-container:hover .credential {
    transform: rotateY(12deg) rotateX(-12deg);
  }

  .card {
    position: absolute;
    width: auto;
    padding: 0.5rem 1rem;
    height: 30px;
    background-color: #000;
    color: #38bdf8;
    border: 1px solid #38bdf8;
    border-radius: 5px;
    box-shadow: 0 0 6px rgba(56, 189, 248, 0.35), 0 10px 15px rgba(0, 0, 0, 0.50);
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    margin-top: 0.4rem;
    transition: transform 0.6s, box-shadow 0.6s;
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse {
    0%, 100% {
      box-shadow: 0 0 6px rgba(56, 189, 248, 0.35), 0 10px 15px rgba(0, 0, 0, 0.50);
    }
    50% {
      box-shadow: 0 0 12px rgba(56, 189, 248, 0.6), 0 10px 15px rgba(0, 0, 0, 0.50);
    }
  }

  .card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      to bottom right,
      rgba(255,255,255,0.3) 0%,
      rgba(255,255,255,0.1) 50%,
      transparent 50%
    );
    transform: rotate(-45deg);
    pointer-events: none;
  }

  .text {
    font-family: 'Space Mono', sans-serif;
    font-size: 0.8rem;
    font-weight: normal;
    color: #38bdf8;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: transform 0.6s;
  }
</style>
