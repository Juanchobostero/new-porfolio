<div class="credential-container">
  <div class="credential">
    <div class="card">
      <span class="text"><slot /></span>
    </div>
  </div>
</div>

<style>
  .credential-container {
    perspective: 1000px;
    width: 140px;
    height: 100px;
  }

  .credential {
    width: 100%;
    height: 100%;
    position: relative;
    transition: transform 0.6s, box-shadow 0.6s;
    transform-style: preserve-3d;
  }

  .credential-container:hover .credential {
    transform: rotateY(10deg) rotateX(-10deg);
  }

  .card {
    position: absolute;
    width: 85%;
    height: 30px;
    background-color: #000;
    color: azure;
    border: #38bdf8 2px solid;
    border-radius: 5px;
    box-shadow: 0 10px 15px rgba(0, 0, 0, 0.50);
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    margin-top: 0.4rem;
    transition: transform 0.6s, box-shadow 0.6s;
  }

  .card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      to bottom right,
      rgba(255,255,255,0.3) 0%,
      rgba(255,255,255,0.1) 50%,
      transparent 50%
    );
    transform: rotate(-45deg);
    pointer-events: none;
  }

  .text {
    font-family: 'Space Mono', sans-serif;
    font-size: 0.8rem;
    font-weight: normal;
    color: azure;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: transform 0.6s;
  }
</style>
