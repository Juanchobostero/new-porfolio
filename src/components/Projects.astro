---
import JavaScript from "./icons/JavaScript.astro"
import CSS from "./icons/CSS.astro"
import PHP from "./icons/PHP.astro"
import MySQL from "./icons/MySQL.astro"
import ReactJS from "./icons/ReactJS.astro"
import MercadoPago from "./icons/MercadoPago.astro"
import HTML from "./icons/HTML.astro"
import Mongo from "./icons/Mongo.astro"
import Node from "./icons/Node.astro"
import Express from "./icons/Express.astro"
import LinkButton from "./LinkButton.astro"
import GitHub from "./icons/GitHub.astro"
import Web from "./icons/Web.astro"
import AstroIcon from "./icons/AstroIcon.astro"
import VS from "./icons/VS.astro"

const TAGS = {
    JAVASCRIPT: {
        name: "JavaScript",
        class: "bg-[#696964] text-white",
        icon: JavaScript
    },
    CSS: {
        name: "CSS",
        class: "bg-[#696964] text-white",
        icon: CSS
    },
    PHP: {
        name: "CodeIgniter",
        class: "bg-[#696964] text-white",
        icon: PHP
    },
    MYSQL: {
        name: "MySQL",
        class: "bg-[#696964] text-white",
        icon: MySQL
    },
    REACTJS: {
        name: "ReactJS",
        class: "bg-[#696964] text-white",
        icon: ReactJS
    },
    MERCADOPAGO: {
        name: "MercadoPago",
        class: "bg-[#696964] text-white",
        icon: MercadoPago
    },
    HTML: {
        name: "HTML",
        class: "bg-[#696964] text-white",
        icon: HTML
    },
    MONGO: {
        name: "MongoDB",
        class: "bg-[#696964] text-white",
        icon: Mongo
    },
    NODE: {
        name: "NodeJS",
        class: "bg-[#696964] text-white",
        icon: Node
    }, 
    EXPRESS: {
        name: "Express",
        class: "bg-[#696964] text-white",
        icon: Express
    },
    ASTRO: {
        name: "Astro",
        class: "bg-[#696964] text-white",
        icon: AstroIcon
    },
    VSCODE: {
        name: "VSCode",
        class: "bg-[#696964] text-white",
        icon: VS
    }
}
const PROJECTS  = [
    {
        title: 'El Promesero - Alfajores Artesanales',
        description: 'Desarrollo basado en curso de stack MERN en plataforma UDEMY. Se realizó un rediseño adaptando a los requisitos del cliente (imagen de fondo, colores, tipografías, etc).',
        link: 'https://elpromesero.com',
        github: 'https://github.com/Juanchobostero/ecommerce-reactjs',
        image: '/projects/elpromeserobackground.webp',
        tags: [TAGS.MONGO, TAGS.EXPRESS, TAGS.REACTJS, TAGS.NODE],
        off: false
    },
    {
        title: 'STACK GAME 2D',
        description: 'Desarrollo de juego en 2D basado en app de midudev. Se utilizó el Framework ASTRO para su componentización & despliegue.',
        link: 'https://stack-game-2d.vercel.app/',
        github: 'https://github.com/Juanchobostero/stack-game-2d',
        image: '/projects/stack-game.webp',
        tags: [TAGS.NODE, TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT, TAGS.ASTRO],
        off: false
    },
    {
        title: 'Generador código QR',
        description: 'Desarrollo de generador de código QR, utilizando el Framework ASTRO, Reactjs y TailwindCSS.',
        link: 'https://qr-code-generator-three-fawn.vercel.app/',
        github: 'https://github.com/Juanchobostero/qr-code-generator',
        image: '/projects/qr-generator.webp',
        tags: [TAGS.NODE, TAGS.REACTJS, TAGS.CSS, TAGS.ASTRO],
        off: false
    },
]
---

<section class="flex flex-col gap-y-16">
{
    PROJECTS.map(({ title, description, tags, github, image, link, off }) => (
        <article class="mb-5">
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-4 gap-y-2 flex-row mb-2 mt-6 flex-wrap">
                {
                    tags.map((tag) => (
                        <li>
                            <span class={`flex gap-x-1 text-sm ${tag.class} py-1 px-2 cursor-pointer`}>
                                <tag.icon class="size-5 cursor-pointer" />
                                {tag.name}
                            </span>
                        </li>
                    ))
                }
            </ul>
            <img 
                class="rounded shadow-2xl shadow-white/10 object-cover"
                src={image} 
                alt={`Captura de pantalla del proyecto ${image}`} 
            />

            <footer class="flex gap-x-4 items-end justify-start mt-4">
                {github && (
                    <LinkButton href={github}>
                    <GitHub class="size-6" />
                        Ver código fuente
                    </LinkButton>
                )}
                {
                    off ? null : (
                        <LinkButton href={link}>
                            <Web class="size-6" />
                                Visitar
                        </LinkButton>
                    )
                }

                    <LinkButton href={link}>
                        <Web class="size-6" />
                            Ver más
                    </LinkButton>
                
            </footer>
        </article>
    ))
}

</section>

<style>
    @keyframes reveal {
		from {
			opacity: 0;
			transform: 0 100px;
		}
		to {
			opacity: 1;
			transform: 0 0;
		}
	}

	article {
		animation: reveal both;
		animation-timeline: view();
		animation-range: entry 20% cover 30%;
	}
</style>