---
import JavaScript from "./icons/JavaScript.astro"
import CSS from "./icons/CSS.astro"
import PHP from "./icons/PHP.astro"
import MySQL from "./icons/MySQL.astro"
import ReactJS from "./icons/ReactJS.astro"
import MercadoPago from "./icons/MercadoPago.astro"
import HTML from "./icons/HTML.astro"
import Mongo from "./icons/Mongo.astro"
import Node from "./icons/Node.astro"
import Express from "./icons/Express.astro"
import LinkButton from "./LinkButton.astro"
import GitHub from "./icons/GitHub.astro"
import Web from "./icons/Web.astro"
import AstroIcon from "./icons/AstroIcon.astro"
import VS from "./icons/VS.astro"

const TAGS = {
    JAVASCRIPT: {
        name: "JavaScript",
        class: "bg-yellow-500/20 border border-yellow-500/50 text-yellow-300",
        icon: JavaScript
    },
    CSS: {
        name: "CSS",
        class: "bg-blue-500/20 border border-blue-500/50 text-blue-300",
        icon: CSS
    },
    PHP: {
        name: "CodeIgniter",
        class: "bg-red-500/20 border border-red-500/50 text-red-300",
        icon: PHP
    },
    MYSQL: {
        name: "MySQL",
        class: "bg-cyan-500/20 border border-cyan-500/50 text-cyan-300",
        icon: MySQL
    },
    REACTJS: {
        name: "ReactJS",
        class: "bg-sky-500/20 border border-sky-500/50 text-sky-300",
        icon: ReactJS
    },
    MERCADOPAGO: {
        name: "MercadoPago",
        class: "bg-blue-400/20 border border-blue-400/50 text-blue-300",
        icon: MercadoPago
    },
    HTML: {
        name: "HTML",
        class: "bg-orange-500/20 border border-orange-500/50 text-orange-300",
        icon: HTML
    },
    MONGO: {
        name: "MongoDB",
        class: "bg-green-500/20 border border-green-500/50 text-green-300",
        icon: Mongo
    },
    NODE: {
        name: "NodeJS",
        class: "bg-green-600/20 border border-green-600/50 text-green-400",
        icon: Node
    }, 
    EXPRESS: {
        name: "Express",
        class: "bg-gray-500/20 border border-gray-500/50 text-gray-300",
        icon: Express
    },
    ASTRO: {
        name: "Astro",
        class: "bg-purple-500/20 border border-purple-500/50 text-purple-300",
        icon: AstroIcon
    },
    VSCODE: {
        name: "VSCode",
        class: "bg-blue-600/20 border border-blue-600/50 text-blue-300",
        icon: VS
    },
    GITHUB: {
        name: "GitHub",
        class: "bg-gray-800/20 border border-gray-800/50 text-gray-300",
        icon: GitHub
    }
}
const PROJECTS  = [
    {
        title: 'El Promesero - Alfajores Artesanales',
        description: 'Diseño e Implementación completa de sistema para gestión de alfajores artesanales de la empresa El Promesero.',
        link: 'https://elpromesero.com',
        github: 'https://github.com/Juanchobostero/ecommerce-reactjs',
        image: '/projects/elpromesero.webp',
        tags: [TAGS.MONGO, TAGS.EXPRESS, TAGS.REACTJS, TAGS.NODE],
        off: false
    },
    {
        title: 'Carga y visualización de resultados de elecciones 2025 - Corrientes, Argentina',
        description: 'Desarrollo de sistema de carga de resultados electorales, utilizada por gente de un partido en específico.',
        link: 'https://conteo-elecciones-app.vercel.app/',
        github: 'https://github.com/Juanchobostero/conteo-elecciones',
        image: '/projects/carga-elecciones.webp',
        tags: [TAGS.MONGO, TAGS.EXPRESS, TAGS.REACTJS, TAGS.NODE, TAGS.ASTRO],
        off: false
    },
    {
        title: "Colaboración a Proyecto de la comunidad <a href='https://svgl.app/' target='_blank' rel='noopener noreferrer' aria-label='Visitar web de svgl' class='text-sky-400 hover:text-sky-300 underline transition-colors'>SVGL</a>",
        description: "Se realizó un Fork del proyecto y se implementó una mejora en la accesibilidad de 90 a 95, con la posterior revisión y aprobación de la PR por parte del propietario <a href='https://github.com/pheralb' target='_blank' rel='noopener noreferrer' aria-label='Visitar repositorio de Pablo Hdez' class='text-sky-400 hover:text-sky-300 underline transition-colors'>Pablo Hdez</a>. <a href='https://github.com/Juanchobostero/svgl/commits/main/' target='_blank' rel='noopener noreferrer' aria-label='Visitar commits del repositorio' class='text-sky-400 hover:text-sky-300 underline transition-colors'>Link del commit</a>",
        link: 'https://svgl.app/',
        github: 'https://github.com/Juanchobostero/svgl',
        image: '/projects/svgl.webp',
        tags: [TAGS.NODE, TAGS.GITHUB],
        off: false
    },
    {
        title: 'Generador código QR',
        description: 'Desarrollo de generador de código QR, utilizando el Framework ASTRO, Reactjs y TailwindCSS.',
        link: 'https://qr-code-generator-three-fawn.vercel.app/',
        github: 'https://github.com/Juanchobostero/qr-code-generator',
        image: '/projects/qr-generator.webp',
        tags: [TAGS.NODE, TAGS.REACTJS, TAGS.CSS, TAGS.ASTRO],
        off: false
    },
    {
        title: 'STACK GAME 2D',
        description: 'Desarrollo de juego en 2D basado en app de midudev. Se utilizó el Framework ASTRO para su componentización & despliegue.',
        link: 'https://stack-game-2d.vercel.app/',
        github: 'https://github.com/Juanchobostero/stack-game-2d',
        image: '/projects/stack-game.webp',
        tags: [TAGS.NODE, TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT, TAGS.ASTRO],
        off: false
    },
]
---

<section class="flex flex-col gap-y-16">
{
    PROJECTS.map(({ title, description, tags, github, image, link, off }) => (
        <article class="mb-5">
            <h3 class="text-2xl font-semibold text-yellow-300 mb-2 hover:text-yellow-200 transition-colors duration-300" set:html={title}></h3>
            <p class="text-lg mb-4 text-pretty" set:html={description}></p>
            <ul class="flex gap-x-4 gap-y-2 flex-row mb-2 mt-6 flex-wrap">
                {
                    tags.map((tag) => (
                        <li>
                            <span class={`flex gap-x-1 text-sm ${tag.class} py-1 px-2 rounded-md cursor-pointer hover:scale-105 transition-transform duration-200`}>
                                <tag.icon class="size-5" />
                                {tag.name}
                            </span>
                        </li>
                    ))
                }
            </ul>
            <img 
                class="rounded shadow-2xl shadow-white/10 object-cover hover:scale-[1.02] transition-transform duration-300 border border-white/10"
                src={image} 
                alt={`Captura de pantalla del proyecto ${title} - Portfolio Juan Cruz Martínez`}
                loading="lazy"
                width="800"
                height="450"
            />

            <footer class="flex gap-x-4 items-end justify-start mt-4">
                {github && (
                    <LinkButton href={github}>
                    <GitHub class="size-6" />
                        Ver código fuente
                    </LinkButton>
                )}
                {
                    off ? null : (
                        <LinkButton href={link}>
                            <Web class="size-6" />
                                Visitar
                        </LinkButton>
                    )
                }

                    <LinkButton href={link}>
                        <Web class="size-6" />
                            Ver más
                    </LinkButton>
                
            </footer>
        </article>
    ))
}

</section>

<style>
    @keyframes reveal {
		from {
			opacity: 0;
			transform: 0 100px;
		}
		to {
			opacity: 1;
			transform: 0 0;
		}
	}

	article {
		animation: reveal both;
		animation-timeline: view();
		animation-range: entry 20% cover 30%;
	}
</style>