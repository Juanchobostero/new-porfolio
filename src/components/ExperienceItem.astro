---
import ASPNET from './icons/ASPNET.astro';
import JavaScript from './icons/JavaScript.astro';
import Postgre from './icons/Postgre.astro';
import Node from './icons/Node.astro';
import NestJS from './icons/NestJS.astro';
import Vue from './icons/Vue.astro';
import HTML from './icons/HTML.astro';
import CSS from './icons/CSS.astro';
import PHP from './icons/PHP.astro';
import Python from './icons/Python.astro';
import MySQL from './icons/MySQL.astro';
import Git from './icons/Git.astro';
import Mongo from './icons/Mongo.astro';
import ReactJS from './icons/ReactJS.astro';
import Express from './icons/Express.astro';
import GCP from './icons/GCP.astro';

export interface Props {
    title: string,
    description: string,
    link?: string,
    date: string,
    current: boolean,
    technologies?: string[]
}
const { title, description, link, date, current, technologies = [] } = Astro.props

// Mapeo de tecnologías a componentes de iconos y URLs
const techData: Record<string, { icon: any, name: string, url: string }> = {
    '.net': { icon: ASPNET, name: '.NET', url: 'https://dotnet.microsoft.com/' },
    'js': { icon: JavaScript, name: 'JavaScript', url: 'https://developer.mozilla.org/es/docs/Web/JavaScript' },
    'javascript': { icon: JavaScript, name: 'JavaScript', url: 'https://developer.mozilla.org/es/docs/Web/JavaScript' },
    'postgresql': { icon: Postgre, name: 'PostgreSQL', url: 'https://www.postgresql.org/' },
    'node': { icon: Node, name: 'Node.js', url: 'https://nodejs.org/' },
    'nestjs': { icon: NestJS, name: 'NestJS', url: 'https://nestjs.com/' },
    'vue': { icon: Vue, name: 'Vue.js', url: 'https://vuejs.org/' },
    'html': { icon: HTML, name: 'HTML5', url: 'https://developer.mozilla.org/es/docs/Web/HTML' },
    'css': { icon: CSS, name: 'CSS3', url: 'https://developer.mozilla.org/es/docs/Web/CSS' },
    'php': { icon: PHP, name: 'PHP', url: 'https://www.php.net/' },
    'python': { icon: Python, name: 'Python', url: 'https://www.python.org/' },
    'mysql': { icon: MySQL, name: 'MySQL', url: 'https://www.mysql.com/' },
    'git': { icon: Git, name: 'Git', url: 'https://git-scm.com/' },
    'mongodb': { icon: Mongo, name: 'MongoDB', url: 'https://www.mongodb.com/' },
    'react': { icon: ReactJS, name: 'React', url: 'https://react.dev/' },
    'express': { icon: Express, name: 'Express', url: 'https://expressjs.com/' },
    'gcp': { icon: GCP, name: 'Google Cloud', url: 'https://cloud.google.com/' },
}
---

    <div class="absolute w-3 h-3 bg-sky-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-sky-900 dark:bg-sky-700"></div>
        <time class="mb-1 text-sm font-normal leading-none text-sky-400 dark:text-sky-500">{date}</time>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-yellow-300" style="text-shadow: 0 0 20px rgba(253, 224, 71, 0.3);" set:html={title}></h3>
        <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400" set:html={description}></p>
        
        {technologies.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-4">
                {technologies.map(tech => {
                    const techInfo = techData[tech.toLowerCase()];
                    if (techInfo) {
                        const IconComponent = techInfo.icon;
                        return (
                            <a 
                                href={techInfo.url} 
                                target="_blank" 
                                rel="noopener noreferrer"
                                class="group inline-flex items-center gap-1 px-2 py-1 text-xs font-medium bg-white/5 border border-white/10 rounded-md hover:border-sky-400/50 hover:bg-white/10 transition-all relative"
                                title={techInfo.name}
                                aria-label={`Ir a documentación de ${techInfo.name}`}
                            >
                                <IconComponent class="size-5 group-hover:scale-110 transition-transform" />
                                <span class="tooltip-tech">{techInfo.name}</span>
                            </a>
                        );
                    }
                    return (
                        <span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-white/5 border border-white/10 rounded-md text-gray-400">
                            {tech}
                        </span>
                    );
                })}
            </div>
        )}
